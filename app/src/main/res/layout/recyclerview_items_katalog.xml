<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginEnd="1dp"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="410dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/imgLoad"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
            android:src="@drawable/ic_logo_3"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorHitam"
            android:text="JSon Image Name\nasasasas"
            android:id="@+id/txtJudulPromo"
            android:layout_below="@+id/imageView"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:text="JSon Image Name"
            android:textStyle="bold"
            android:id="@+id/txtHargaProduk"
            android:layout_above="@+id/txtHargaLama"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#858585"
            android:text="JSon Image Name"
            android:id="@+id/txtHargaLama"
            android:layout_above="@+id/txtHargaBaru"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:text="JSon Image Name"
            android:id="@+id/txtHargaBaru"
            android:layout_above="@+id/llToko"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="2dp"
            android:layout_above="@+id/llDurasiPromo"
            android:id="@+id/llToko">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_toko_3"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorSc2"
                    android:text="JSon Image Name"
                    android:id="@+id/txtNamaToko"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:id="@+id/lokasi"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_lokasi_2"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorSc2"
                    android:text="Bandar Lampung"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/txtLokasi"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llDurasiPromo"
            android:layout_above="@+id/llBtn"
            android:layout_marginBottom="5dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="10 Hari Lagi"
                android:id="@+id/txtDurasiPromo"
                android:layout_below="@+id/txtLokasi"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@id/llBtn"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btUbahPromo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Ubah"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                />

            <Button
                android:id="@+id/btHapusPromo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Hapus"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>