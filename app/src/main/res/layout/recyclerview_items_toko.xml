<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="5dp"
    card_view:cardMaxElevation="5dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginBottom="1dp"
    android:layout_marginRight="1dp"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="fill_parent"
        android:layout_height="310dp"
        android:background="#fff">

        <ImageView
            android:id="@+id/imgLoad"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_logo_3"
            android:background="@drawable/garis_3"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:scaleType="center"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:background="@drawable/garis_3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorHitam"
            android:text="JSon Image Name\"
            android:id="@+id/txtNamaToko"
            android:layout_below="@+id/imageView"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorHitam"
            android:text="JSon Image Name\"
            android:id="@+id/txtNamaTokoSearch"
            android:layout_below="@+id/imageView"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/colorSc2"
            android:text="JSon Image Name\n\n"
            android:id="@+id/txtAlamat"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/txtNamaToko"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/llBtn"
            android:orientation="vertical"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/llToko">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:id="@+id/lokasi"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_lokasi_2"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorSc2"
                    android:text="Bandar Lampung"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/txtLokasi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="2dp">
                <ImageView
                    android:id="@+id/jarak"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_gps_on"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorSc2"
                    android:text="300 Meter"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/txtJarak"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@id/llBtn"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btKatalog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Lihat Promo"
                android:textSize="14sp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>